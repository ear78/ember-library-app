<h2>List</h2>

{{#each model as |library|}}
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title">{{library.name}}</h3>
    </div>
    <div class="panel-body">
      <p>Address: {{library.address}}</p>
      <p>Phone: {{library.phone}}</p>
    </div>
    <div class="panel-footer text-right">
        <!-- EDIT FUNCTIONALITY PASSING ID -->
        {{#link-to 'libraries.edit' library.id class="btn btn-success btn-xs"}}Edit{{/link-to}}

        <!-- DELETE FUNCTIONALITY FOR LIBRARY -->
        <button type="button" name="button" class="btn btn-danger btn-xs" {{action 'deleteLibrary' library}}>Delete</button>
    </div>
  </div>
{{/each}}
